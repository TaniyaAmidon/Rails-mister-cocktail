<%= simple_form_for([@cocktail, @dose]) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].
  to_sentence if f.object.errors[:base].present? %>

  <div class="form-input">
    <%= f.association :ingredient %>
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-flat" %>
    <%= link_to 'Cancel', cocktail_path(@cocktail), class: "btn btn-cancel" %>
  </div>
<% end %>


